@model CentroVacunacion2

@{
    ViewData["Title"] = "Crear un centro de vacunación";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Crear Centro de Vacunación</h2>
            <hr />
        </div>

        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Descripcion"></label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProvinciaId"></label>
            <input asp-for="ProvinciaId" class="form-control" />
            <span asp-validation-for="ProvinciaId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">Crear</button>
        <a asp-controller="CentroVacunacion2" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Regresar 
        </a>
    </div>
</form>

@section Scripts{
    @{
     <partial name="_ValidationScriptsPartial" />
    }
}



